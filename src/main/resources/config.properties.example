# ========================================
# CONFIGURAÇÕES DO ESL CLOUD DATA EXTRACTOR
# ========================================
# Este é um arquivo de exemplo. Copie para config.properties e configure os valores.

# ========================================
# CONFIGURAÇÕES DE API
# ========================================
# URLs base das APIs (podem ser sobrescritas por variáveis de ambiente)
api.baseurl=https://sua-empresa.eslcloud.com.br
api.rest.endpoint=/api/v1
api.graphql.endpoint=/graphql
api.dataexport.endpoint=/dataexport

# ========================================
# CONFIGURAÇÕES DE LIMITE DE PÁGINAS
# ========================================
# Limites de proteção para evitar extrações excessivas
# Valores padrão se não configurados:
# - API REST: 500 páginas
# - API GraphQL: 2000 páginas  
# - API DataExport: 500 páginas

# Limite máximo de páginas por execução para API REST
api.rest.max.paginas=500

# Limite máximo de páginas por execução para API GraphQL
api.graphql.max.paginas=2000

# Limite máximo de páginas por execução para API DataExport
api.dataexport.max.paginas=500

# ========================================
# CONFIGURAÇÕES DE RETRY E THROTTLING
# ========================================
# Configurações para gerenciamento de requisições HTTP
http.retry.max.tentativas=3
http.retry.delay.inicial.ms=1000
http.throttling.delay.ms=500

# ========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ========================================
# Configurações de conexão (recomenda-se usar variáveis de ambiente)
# db.url=jdbc:sqlserver://localhost:1433;databaseName=esl_cloud
# db.user=sa
# db.password=sua_senha

# ========================================
# CONFIGURAÇÕES DE TEMPLATES DATA EXPORT
# ========================================
# IDs dos templates para cada entidade
template.manifestos=123
template.localizacao_cargas=456

# ========================================
# CONFIGURAÇÕES DE AUDITORIA
# ========================================
# Configurações para validação de dados
auditoria.tolerancia.nulos.padrao=0.05
auditoria.tolerancia.nulos.extracao.incompleta=0.15